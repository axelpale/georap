<% if (system === 'WGS84') { %>
  <div class="form-group">
    <label for="coordsform-latitude">Latitude (N)</label>
    <input type="text" class="form-control" id="coordsform-latitude">
    <small class="form-text text-muted">WGS 84, decimal degrees (12.3456)</small>
  </div>
  <div class="form-group">
    <label for="coordsform-longitude">Longitude (E)</label>
    <input type="text" class="form-control" id="coordsform-longitude">
    <small class="form-text text-muted">WGS 84, decimal degrees (12.3456)</small>
  </div>
<% } else if (system === 'WGS84-DM') { %>
  <div class="form-group">
    <label for="coordsform-latitude">Latitude (N)</label>
    <input type="text" class="form-control" id="coordsform-latitude">
    <small class="form-text text-muted">WGS 84, degrees decimal minutes (12째 34.56')</small>
  </div>
  <div class="form-group">
    <label for="coordsform-longitude">Longitude (E)</label>
    <input type="text" class="form-control" id="coordsform-longitude">
    <small class="form-text text-muted">WGS 84, degrees decimal minutes (12째 34.56')</small>
  </div>
<% } else if (system === 'WGS84-DMS') { %>
  <div class="form-group">
    <label for="coordsform-latitude">Latitude (N)</label>
    <input type="text" class="form-control" id="coordsform-latitude">
    <small class="form-text text-muted">WGS 84, degrees minutes seconds (12째 34' 56")</small>
  </div>
  <div class="form-group">
    <label for="coordsform-longitude">Longitude (E)</label>
    <input type="text" class="form-control" id="coordsform-longitude">
    <small class="form-text text-muted">WGS 84, degrees minutes seconds (12째 34' 56")</small>
  </div>
<% } else if (system === 'ETRS-TM35FIN' || system === 'SWEREF99-TM') { %>
  <div class="form-group">
    <label for="coordsform-latitude">Northing (N)</label>
    <input type="text" class="form-control" id="coordsform-latitude">
    <small class="form-text text-muted">ETRS-TM35FIN, meters (N 123456)</small>
  </div>
  <div class="form-group">
    <label for="coordsform-longitude">Easting (E)</label>
    <input type="text" class="form-control" id="coordsform-longitude">
    <small class="form-text text-muted">ETRS-TM35FIN, meters (E 123456)</small>
  </div>
<% } %>
