<form class="panel panel-default coordsform">
  <div class="panel-heading">
    <span class="glyphicon glyphicon-move" aria-hidden="true"></span>
    Set Custom Coordinates
  </div>
  <div class="panel-body">
    <div class="form-group">
      <label for="coordsform-system">Coordinate System</label>
      <select class="form-control" id="coordsform-system">
        <% systems.forEach(function (system) { %>
        <option value="system[0]"><%= system[0] %></option>
        <% }) %>
      </select>
    </div>
    <div class="form-group">
      <label for="coordsform-latitude">Latitude</label>
      <input type="text" class="form-control" id="coordsform-latitude">
      <small class="form-text text-muted">WGS 84, decimal degrees (DD.DDDD)</small>
    </div>
    <div class="form-group">
      <label for="coordsform-longitude">Longitude</label>
      <input type="text" class="form-control" id="coordsform-longitude">
      <small class="form-text text-muted">WGS 84, decimal degrees (DD.DDDD)</small>
    </div>
    <div class="pull-right">
      <button type="submit" class="btn btn-default">Go</button>
    </div>
  </div>
</form>

<div class="hidden coordsform-error">
  <div class="alert alert-danger" role="alert">Updating the coordinates failed. Ensure both coordinates to be in the decimal degree format similar to 12.345678.</div>
</div>
