<form class="panel panel-default coordsform">
  <div class="panel-heading">
    <span class="glyphicon glyphicon-move" aria-hidden="true"></span>
    Set Custom Coordinates
  </div>
  <div class="panel-body">
    <div class="form-group">
      <label for="coordsform-system-selector">Coordinate System</label>
      <select class="form-control" id="coordsform-system-selector">
        <% systems.forEach(function (system) { %>
        <option value="<%= system[0] %>"><%= system[0] %></option>
        <% }) %>
      </select>
      <small class="form-text text-muted">The default is WGS84.</small>
    </div>
    <div class="form-group">
      <label for="coordsform-input">Coordinates as text</label>
      <input type="text" id="coordsform-input" class="coordsform-input">
    </div>
    <button type="button" class="btn btn-default coordsform-reset">Reset</button>
    <div class="pull-right">
      <button type="submit" class="btn btn-default coordsform-go">Go</button>
    </div>
  </div>
</form>

<div class="hidden coordsform-error">
  <div class="alert alert-danger" role="alert">Updating the coordinates failed. Ensure both coordinates to be in the decimal degree format similar to 12.345678.</div>
</div>
