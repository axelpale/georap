<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">

      <h1><span class="glyphicon glyphicon-filter" aria-hidden="true"></span><span id="georap-filter-title-dot" class="<%= isFilterActive ? '' : 'hidden' %>">&nbsp;</span> <%= __('filter-locations') %></h1>

      <p>
      <button id="georap-filter-off" class="btn <%= isFilterActive ? 'btn-danger' : 'btn-default disabled' %>"><%= __('filter-turn-off') %></button>
      <p>

      <h3><%= __('filter-by-status') %></h3>

      <div id="georap-filter-status-list" class="location-status-list">
        <button data-status="any" class="location-filter-any location-status-any georap-tag <%= currentStatus === 'any' ? 'georap-tag-active' : '' %>"><%= __('filter-any') %></button>
        <%= statusListHtml %>
      </div>

      <h3><%= __('filter-by-type') %></h3>

      <div id="georap-filter-type-list" class="location-type-list">
        <button data-type="any" class="location-filter-any location-type-any georap-tag <%= currentType === 'any' ? 'georap-tag-active' : '' %>"><%= __('filter-any') %></button>
        <%= typeListHtml %>
      </div>

    </div>
  </div>
</div>
