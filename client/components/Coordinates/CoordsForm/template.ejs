<form class="panel panel-default coordsform">
  <div class="panel-heading">
    <span class="glyphicon glyphicon-move" aria-hidden="true"></span>
    <%= __('set-custom-coordinates') %>
  </div>
  <div class="panel-body">
    <div class="form-group">
      <label for="coordsform-system-selector"><%= __('coordinate-system') %></label>
      <select class="form-control" id="coordsform-system-selector">
        <%
          systems.forEach(function (system, index) {
            var systemName = system[0];
            var isDefault = systemName === defaultSystemName;
        %>
        <option value="<%= systemName %>"
          <%= isDefault ? ' selected="selected"' : '' %>>
          <%= systemName %>
        </option>
        <%
          });
        %>
      </select>
      <small class="form-text text-muted"><%= __('coordinate-system-meaning') %>.</small>
    </div>
    <div class="form-group">
      <label for="coordsform-input"><%= __('coordinates-as-text') %></label>
      <input type="text" id="coordsform-input" class="coordsform-input form-control">
      <small class="form-text text-muted coordsform-example"></small>
    </div>
    <div class="hidden coordsform-error">
      <div class="alert alert-warning" role="alert"></div>
    </div>
    <button type="button" class="btn btn-default coordsform-reset"><%= __('copy-from-map') %></button>
    <div class="pull-right">
      <button type="submit" class="btn btn-default coordsform-go"><%= __('go') %></button>
    </div>
  </div>
</form>
