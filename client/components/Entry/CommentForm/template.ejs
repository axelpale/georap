<% if (!isNew) { %><hr><% } %>
<div class="comment-form-group">

  <div class="comment-form-markdown-container"></div>
  <div class="comment-form-attachments-container"></div>

  <div class="form-group pull-right">
    <button type="button" class="comment-form-photo-btn btn btn-default" title="Add Photo"><span class="glyphicon glyphicon-plus" aria-label="Add"></span> <span class="glyphicon glyphicon-picture" aria-label="Photo"></span></button>
    <button class="comment-form-cancel btn btn-default" type="button">Cancel</button>
    <button class="comment-form-submit btn btn-primary" type="button"><%
      if (isNew) {
        %>Comment<%
      } else {
        %>Save<%
      }
    %></button>
  </div>

  <div class="form-group">
    <% if (!isNew) { %>
    <!-- Delete confirmation -->
    <div class="form-group">
      <button type="button" class="comment-remove-open btn btn-danger">Delete comment...</button>
    </div>
    <div class="comment-remove-container hidden"></div>
    <% } %>
  </div>

  <div class="clearfix"></div>
</div>

<div class="comment-form-error"></div>

<div class="comment-form-progress progress hidden">
  <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: 100%">
    <span class="sr-only">Waiting for server</span>
  </div>
</div>
