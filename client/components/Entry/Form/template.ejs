<div class="entry-form">

  <div class="form-markdown-container"></div>

  <div class="form-attachments-container"></div>

  <div class="form-progress progress hidden">
    <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: 100%">
      <span class="sr-only">Waiting for server</span>
    </div>
  </div>

  <div class="form-group">
    <div class="pull-right">
      <button type="button" class="btn btn-default entry-form-cancel">Cancel</button>
      <button type="button" class="btn btn-primary entry-form-save">Save</button>
    </div>
    <% if (!isNew) { %>
      <!-- Delete confirmation -->
    <div class="form-remove-container"></div>
    <% } else { %>
    <div class="clearfix"></div>
    <% } %>
  </div>

  <div class="form-error-container"></div>

  <% if (!isNew) { %>
  <hr>
  <h4>Original:</h4>
  <% } %>
</div>
