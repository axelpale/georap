<div class="panel panel-default tresdb-entry">

  <div class="panel-heading">
    <div class="pull-right">
      <% if (isAuthorOrAdmin) { %>
        <button type="button" class="btn btn-default btn-sm entry-form-open">&hellip;</button>
      <% } %>
    </div>
    <a href="/users/<%= username %>"><%= username %></a> posted <%= flagstamp %><%= timestamp %>
  </div>

  <div class="panel-body entry-form-container hidden"></div>

  <div class="entry-body panel-body<%= hasMarkdown ? '' : ' hidden' %>">
    <%= markdownHtml %>
  </div>

  <div class="entry-attachments-container"></div>
  <ul class="entry-comments-container list-group"></ul>
  <div class="comment-form-container panel-body hidden"></div>

  <div class="entry-footer panel-footer">
    <div class="comment-button-container"></div>
  </div>

</div>
