<ul class="list-group">
<% if (locations.length === 0) { %>
  <li class="list-group-item text-muted center-block">No results</li>
<% } else { %>
  <% locations.forEach(function (loc) { %>
  <li class="list-group-item" data-locationid="<%= loc._id %>">
    <h4><a href="/locations/<%= loc._id %>?&ref=latest"><%= loc.name %></a></h4>
    <div style="color: gray; font-style: italic;">
      <span class="location-status"><%= loc.status %></span>
      <span class="location-type"><%= loc.type %></span> in
      <%= placestamp(loc.places) %>
    </div>
    <div>by <a href=""><%= loc.creator %></a> <%= timestamp(loc.createdAt) %></div>
    <% if (loc.thumbUrl) { %>
    <div class="location-item-thumbnail">
      <img src="<%= loc.thumbUrl %>">
    </div>
    <% } else { %>
    <div class="location-item-thumbnail">
      <img src="/assets/images/markers/symbols/<%= loc.type %>.png" class="location-type-symbol" title="<%= loc.type %>.png">
    </div>
    <% } %>
  </li>
  <% }); %>
<% } %>
</ul>
<div class="text-muted" style="margin-top: -20px; margin-bottom: 5px;">
  <span class="glyphicon glyphicon-triangle-top" aria-label="Above"></span>
  Showing <%= skip + limit %> locations out of <%= total %>
</div>
