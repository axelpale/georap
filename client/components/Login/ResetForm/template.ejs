<hr>

<div class="password-reset-success hidden">
  <div class="alert alert-success" role="alert"><%= __('pwd-reset-send-success') %></div>
</div>

<div class="password-reset-in-progress hidden">
  <div class="progress">
    <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: 100%">
      <span class="sr-only">Waiting for server</span>
    </div>
  </div>
</div>

<!-- Reset form -->
<form class="password-reset-form">
  <h3><%= __('forgot-password-title') %></h3>
  <p><%= __('forgot-password-help') %></p>
  <div class="form-group">
    <label for="password-reset-email"><%= __('email-address') %></label>
    <input type="email" class="form-control" id="password-reset-email">
  </div>
  <div class="pull-right">
    <button type="submit" class="btn btn-primary"><%= __('send-email') %></button>
  </div>
  <div class="form-group">
    <button type="button" class="password-reset-cancel btn btn-default"><%= __('cancel') %></button>
  </div>
</form>

<div class="password-reset-invalid-email hidden">
  <div class="alert alert-danger" role="alert"><%= __('pwd-reset-invalid-email') %></div>
</div>

<div class="password-reset-unknown-email hidden">
  <div class="alert alert-danger" role="alert"><%= __('pwd-reset-unknown-email') %></div>
</div>

<div class="password-reset-server-error hidden">
  <div class="alert alert-danger" role="alert"><%= __('pwd-reset-send-failed') %></div>
</div>
