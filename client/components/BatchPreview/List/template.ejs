<table id="georap-batch-table" class="table table-hover">
  <thead>
    <tr>
      <th><input id="georap-batch-select-all" type="checkbox" name="all-check" title="Select all"></th>
      <th><%= __('name') %></th>
      <th><%= __('attachments') %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% locs.forEach(function (loc, index) { %>
    <tr data-index="<%= index %>">
      <td class="georap-batch-box"><label><input id="georap-batch-<%= index %>" type="checkbox" name="row-check" value="<%= index %>" class="georap-batch-row-check"> #<%= index %></label></td>
      <td class="georap-batch-name"><label for="georap-batch-<%= index %>"><%= loc.name %></label></td>
      <td><%
        var l = loc.entries.length;
        if (l === 0) {
          %>-<%
        } else {
          %><%= loc.entries.length %> post<%= l > 1 ? 's' : '' %><%
        }
      %></td>
      <td>
        <a href="#" class="georap-batch-view-details" data-index="<%= index %>"><%= __('details') %></a>
      </td>
    </tr>
  <% }); %>
  </tbody>
</table>
