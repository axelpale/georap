<% var locName = location.getName(); %>
<% locName = (locName === '' ? __('untitled') : locName); %>
<h1><span class="location-name-display"><%= locName %></span> <button type="button" class="location-rename-show btn btn-default btn-sm"><span class="glyphicon glyphicon-pencil"></span></button></h1>

<form class="location-rename-form hidden panel panel-primary">
  <div class="panel-body">
    <div class="form-group">
      <label for="location-rename-input"><%= __('new-name') %>:</label>
      <input type="text" class="form-control" id="location-rename-input">
    </div>
    <div class="pull-right">
      <button type="button" class="location-rename-cancel btn btn-default"><%= __('cancel') %></button>
      <button type="submit" class="btn btn-primary"><%= __('save') %></button>
    </div>
  </div>
</form>

<div class="location-rename-error hidden">
  <div class="alert alert-danger" role="alert"><%= __('location-rename-error') %></div>
</div>
