<div class="panel panel-default tresdb-entry">

  <div class="panel-heading">
    <div class="pull-right">
      <% if (isAuthorOrAdmin) { %>
        <button type="button" class="btn btn-default btn-sm entry-form-open">&hellip;</button>
      <% } %>
    </div>
    <%= username %> posted <%= flagstamp %><%= timestamp %>
  </div>

  <div class="panel-body entry-form-container hidden"></div>

  <div id="entry-<%= entryId %>-body" class="panel-body<%= hasMarkdown ? '' : ' hidden' %>">
    <%= markdownHtml %>
  </div>

  <div class="entry-attachments-container"></div>

  <ul class="list-group entry-comments-container"></ul>

  <div id="entry-<%= entryId %>-footer" class="panel-footer">
    <button id="entry-<%= entryId %>-open-comment-form" type="button" class="btn btn-default btn-sm"><span class="glyphicon glyphicon-comment"></span> Add Comment</button>
  </div>
</div>
