<%
  var activityClass = function (status) {
    if (status === currentStatus) {
      return 'georap-tag-active';
    }
    return '';
  };
%>

<% locationStatuses.forEach(function (status) { %>
  <button data-status="<%= status %>" class="georap-status-<%= status %> georap-tag <%= activityClass(status) %>">
    <%= __('location-status', status) %>
  </button>
<% }) %>
