<div class="container-fluid">
  <div class="row">

    <div class="col-sm-12" style="margin-bottom: 1em">
      <h1>Search</h1>

      <form id="tresdb-search-form" class="form-horizontal">
        <div class="form-group">
          <label for="tresdb-search-text" class="col-sm-3 control-label">Contains</label>
          <div class="col-sm-9">
            <input id="tresdb-search-text" type="text" class="form-control" placeholder="e.g. helsinki, kalkkipetteri, or military">
          </div>
        </div>
        <div class="form-group">
          <label for="tresdb-search-creator" class="col-sm-3 control-label">Created by</label>
          <div class="col-sm-5">
            <select id="tresdb-search-creator" class="form-control">
              <option value="anyone">Anyone</option>
              <option value="<%= username %>"><%= username %></option><!-- all members here -->
            </select>
          </div>
        </div>
        <div class="form-group">
          <label for="tresdb-search-order" class="col-sm-3 control-label">Order by</label>
          <div class="col-sm-5">
            <select id="tresdb-search-order" class="form-control">
              <option value="rel">Relevance</option>
              <option value="az">Alphabetic A-Z</option>
              <option value="za">Alphabetic Z-A</option>
              <option value="newest">Newest first</option>
              <option value="oldest">Oldest first</option>
            </select>
          </div>
        </div>
        <div class="form-group hidden">
          <div class="col-sm-5 col-sm-offset-3">
            <input id="tresdb-search-skip" type="text" class="form-control">
            <input id="tresdb-search-limit" type="text" class="form-control">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-5 col-sm-offset-3">
            <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span> Search</button>
          </div>
        </div>
      </form>

      <div id="tresdb-search-progress" class="progress hidden">
        <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: 100%">
          <span class="sr-only">Waiting for server</span>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">

      <h3>Streets and Cities</h3>
      <div class="search-web-results"></div>
      <div class="search-web-error hidden">
        <div class="alert alert-danger" role="alert">Retrieving data failed. Press search to try again.</div>
      </div>
      <div class="search-web-progress progress hidden">
        <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: 100%">
          <span class="sr-only">Waiting for geocoding API</span>
        </div>
      </div>

      <h3>Locations</h3>
      <div id="tresdb-search-results"></div>

      <div id="tresdb-search-no-connection" class="hidden">
        <div class="alert alert-danger" role="alert">No connection. Press search to try again.</div>
      </div>
      <div id="tresdb-search-400" class="hidden">
        <div class="alert alert-danger" role="alert">Bad request. Please ensure the form values make sense.</div>
      </div>
      <div id="tresdb-search-500" class="hidden">
        <div class="alert alert-danger" role="alert">Internal server error :(</div>
      </div>

      <!-- Next/Prev navigation buttons -->
      <div class="row" style="margin-bottom: 5em">
        <div class="col-sm-6">
          <button id="tresdb-search-prev" type="button" class="btn btn-default btn-block hidden">&larr; Prev</button>
        </div>
        <div class="col-sm-6">
          <button id="tresdb-search-next" type="button" class="btn btn-default btn-block hidden">Next &rarr;</button>
        </div>
      </div>
    </div>
  </div>
</div>
