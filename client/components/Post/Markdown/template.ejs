<form class="form-markdown">
  <div class="form-group form-markdown-group">
    <label class="control-label">
      <%
        if (glyphicon) {
          %><span class="glyphicon <%= glyphicon %>"></span><%
        }
      %> <%= label %>
    </label>
    <textarea name="markdown-text" class="form-control" rows="<%= rows %>" placeholder="<%= placeholder %>"><%= markdown %></textarea>
    <div class="pull-right">
      <a class="markdown-syntax-open" href="#"><%= __('syntax-help') %></a>
    </div>

    <span class="markdown-hint text-info"></span>
  </div>
</form>

<div class="markdown-syntax well hidden">
  <button type="button" class="close" aria-label="Close"><span aria-hidden="true">&times;</span></button>
  <%= markdownSyntax %>
</div>
