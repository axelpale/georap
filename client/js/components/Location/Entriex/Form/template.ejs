<div class="entry-form panel-body">

  <div id="tresdb-entry-error" class="hidden">
    <div class="alert alert-danger" role="alert">Saving the post failed. Might be a connection issue.</div>
  </div>

  <form>
      <div class="form-group">
        <label for="tresdb-entry-input">Tell something about the location:</label>
        <textarea id="tresdb-entry-input" name="entrytext" class="form-control" rows="3"></textarea>
        <div class="pull-right">
          <a id="tresdb-entry-syntax-show" href="#">Formatting Help</a>
        </div>
      </div>

      <div id="tresdb-entry-syntax" class="well hidden">
        <%= markdownSyntax %>
      </div>

      <div class="pull-right">
        <button id="tresdb-entry-cancel" type="button" class="btn btn-default">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
      </div>

    </div>
  </form>

  <div id="tresdb-entry-progress" class="progress hidden">
    <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: 100%">
      <span class="sr-only">Waiting for server</span>
    </div>
  </div>

</div>
