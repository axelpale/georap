<div class="form-group">
  <span id="tresdb-location-tags-list" class="tresdb-tags">
    <%= tagsListHtml %>
  </span>
  <button id="tresdb-location-edit-tags-show" type="button" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
</div>

<form id="tresdb-location-edit-tags-form" class="hidden panel panel-primary">
  <div class="panel-body">

    <div id="tresdb-location-edit-tags-list">
      <%= tagsFormListHtml %>
    </div>

    <div class="pull-right">
      <button id="tresdb-location-edit-tags-cancel" type="button" class="btn btn-default">Cancel</button>
      <button type="submit" class="btn btn-primary">Save</button>
    </div>

  </div>
</form>

<div id="tresdb-location-edit-tags-progress" class="progress hidden">
  <div class="progress-bar progress-bar-striped active" role="progressbar" style="width: 100%">
    <span class="sr-only">Waiting for server</span>
  </div>
</div>

<div id="tresdb-location-edit-tags-error" class="hidden">
  <div class="alert alert-danger" role="alert">Sorry, updating tags failed. Try again later.</div>
</div>
