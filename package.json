{
  "name": "tresdb",
  "private": true,
  "version": "2.0.0",
  "description": "Esoteric location CMS built on Express",
  "keywords": [
    "GIS",
    "CMS"
  ],
  "main": "server.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/axelpale/tresdb.git"
  },
  "scripts": {
    "start": "npm run lint && NODE_ENV=development node server.js",
    "production": "NODE_ENV=production node server.js",
    "migrate": "node migration/migrate.js",
    "backup": "node migration/backup.js",
    "restore": "node migration/restore.js",
    "test": "npm run test:api && npm run test:client",
    "test:api": "mocha specs/api/auth.spec.js",
    "test:migration": "mocha migration/specs/*.spec.js",
    "test:client": "casperjs test specs/client/test-login.js",
    "lint": "eslint --config ./config/eslint.js . && echo 'Lint successful.'",
    "mongo": "mongo tresdb",
    "mongod": "mkdir -p .data/db && mkdir -p .data/backups && mongod --auth --dbpath=.data/db",
    "reset": "rm -rf .data"
  },
  "author": "Akseli Pal√©n <akseli.palen@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "async": "^2.1.1",
    "bcryptjs": "^2.3.0",
    "commander": "^2.9.0",
    "component-emitter": "^1.2.1",
    "css-loader": "^0.25.0",
    "ejs": "^2.5.2",
    "ejs-loader": "^0.3.0",
    "email-validator": "^1.0.7",
    "express": "^4.14.0",
    "file-loader": "^0.9.0",
    "jsonwebtoken": "^7.1.9",
    "jwt-decode": "^2.1.0",
    "lodash": "^4.15.0",
    "moment": "^2.15.1",
    "mongodb": "^2.2.9",
    "mongodb-backup": "^1.6.6",
    "mongodb-restore": "^1.5.6",
    "monk": "^3.1.2",
    "nodemailer": "^2.6.0",
    "page": "^1.7.1",
    "query-string": "^4.2.3",
    "semver": "^5.3.0",
    "socket.io": "^1.4.8",
    "socket.io-client": "^1.4.8",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2"
  },
  "devDependencies": {
    "assert": "^1.4.1",
    "casperjs": "^1.1.3",
    "eslint": "^3.4.0",
    "mocha": "^3.1.0",
    "phantomjs-prebuilt": "^2.1.12",
    "should": "^11.1.0",
    "webpack-dev-middleware": "^1.6.1",
    "webpack-dev-server": "^1.15.1"
  }
}
