<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1>The Secret Entrance</h1>
      <form id="tresdb-login-form">
        <div class="form-group">
          <label for="tresdb-login-email">Email address:</label>
          <input type="email" class="form-control" id="tresdb-login-email" placeholder="">
        </div>
        <div class="form-group">
          <label for="tresdb-login-password">Password:</label>
          <input type="password" class="form-control" id="tresdb-login-password" placeholder="">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <p id="tresdb-login-errors" class="form-group text-danger">
        </p>
      </form>
      <!-- TODO reset password -->
    </div>
  </div><!-- .row -->
</div><!-- .container-fluid -->
